<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:usf.gwt.bootstrap.ui.widget" xmlns:t="urn:import:com.gwt.extra.client.demo.tools">

	<b:Layout>
		<b:GridRow>
			<b:GridCol size="MD_4" addStyleNames="exempleAlign">
				<b:Form>
					<b:FormGroup>
						<b:Label text="Email :" size="MD_4" />
						<b:TextBox name="mail" />
					</b:FormGroup>
					<b:FormGroup>
						<b:Label text="Password :" size="MD_4"  />
						<b:Password name="pass" />
					</b:FormGroup>
					<b:Button type="SUBMIT" style="PRIMARY" text="Submit" />
					<b:Button type="RESET" style="LINK" text="Reset" align="RIGHT"/>
				</b:Form>
			</b:GridCol>
			<b:GridCol size="MD_8">
				<t:XmlCode>
					<Form>
						<FormGroup>
							<Label text="Email :" size="MD_4" />
							<TextBox name="mail" />
						</FormGroup>
						<FormGroup>
							<Label text="Password :" size="MD_4" />
							<Password name="pass" />
						</FormGroup>
						<Button type="SUBMIT" style="PRIMARY" text="Submit" />
						<Button type="RESET" style="LINK" text="Reset" align="RIGHT"/>
					</Form>
				</t:XmlCode>
			</b:GridCol>
		</b:GridRow>

		<b:GridRow>
			<b:GridCol size="MD_4" addStyleNames="exempleAlign">
				<b:Form style="HORIZONTAL">
					<b:FormGroup>
						<b:Label text="Email :" size="MD_4" />
						<b:GridCol size="MD_8" >
							<b:TextBox name="mail" />
						</b:GridCol>
					</b:FormGroup>
					<b:FormGroup>
						<b:Label text="Password :" size="MD_4" />
						<b:GridCol size="MD_8" >
							<b:Password name="pass" />
						</b:GridCol>
					</b:FormGroup>
					<b:Button type="SUBMIT" style="PRIMARY" text="Submit" />
					<b:Button type="RESET" style="LINK" text="Reset" align="RIGHT"/>
				</b:Form>
			</b:GridCol>
			
			<b:GridCol size="MD_8">
				<t:XmlCode>
					<Form style="HORIZONTAL">
						<FormGroup>
							<Label text="Email :" size="MD_4" />
							<GridCol size="MD_8" >
								<TextBox name="mail" />
							</GridCol>
						</FormGroup>
						<FormGroup>
							<Label text="Password :" size="MD_4" />
							<GridCol size="MD_8" >
								<Password name="pass" />
							</GridCol>
						</FormGroup>
						<Button type="SUBMIT" style="PRIMARY" text="Submit" />
						<Button type="RESET" style="LINK" text="Reset" align="RIGHT"/>
					</Form>
				</t:XmlCode>
			</b:GridCol>
		</b:GridRow>
		
		
		<b:GridRow>
			<b:GridCol size="MD_6">
				<b:Form style="INLINE">
					<b:FormGroup>
						<b:GridCol size="MD_3" >
							<b:TextBox name="mail" placeholder="user@exemple.com" />
						</b:GridCol>
					</b:FormGroup>
					<b:FormGroup>
						<b:GridCol size="MD_3" >
							<b:Password name="pass" placeholder="password" />
						</b:GridCol>
					</b:FormGroup>
					<b:Button type="SUBMIT" style="PRIMARY" text="Submit" />
				</b:Form>
			</b:GridCol>
		</b:GridRow>
		<b:GridRow>
			<b:GridCol size="MD_8">
				<t:XmlCode>
					<Form style="INLINE">
						<FormGroup>
							<GridCol size="MD_3" >
								<TextBox name="mail" placeholder="user@exemple.com" />
							</GridCol>
						</FormGroup>
						<FormGroup>
							<GridCol size="MD_3" >
								<Password name="pass" placeholder="password" />
							</GridCol>
						</FormGroup>
						<Button type="SUBMIT" style="PRIMARY" text="Submit" />
					</Form>
				</t:XmlCode>
			</b:GridCol>
		</b:GridRow>
		
	</b:Layout>
</ui:UiBinder> 