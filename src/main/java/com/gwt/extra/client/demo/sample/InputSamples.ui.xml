<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:usf.gwt.bootstrap.ui.widget" xmlns:t="urn:import:com.gwt.extra.client.demo.tools">
	
	<b:Layout>
	
		<b:GridRow>
			<b:GridCol size="MD_4">
				<b:Label text="Login :" for="logID" />
				<b:TextBox b:id="logID"/>
				<b:Label text="Password :" for="passID" />
				<b:Password b:id="passID" />
			</b:GridCol>
			<b:GridCol size="MD_8">
				<t:XmlCode>
					<Label text="login :" for="logID" />
					<TextBox b:id="logID" />
					<Label text="Password :" for="passID" />
					<Password b:id="passID" />
				</t:XmlCode>
			</b:GridCol>
		</b:GridRow>
		
		<b:GridRow>
			<b:GridCol size="MD_4" addStyleNames="exempleAlign">
				<b:TextBox align="LEFT" placeholder="login" width="150px" maxLength="10"/>
				<b:Password align="LEFT" placeholder="password" width="150px" maxLength="8"/>
			</b:GridCol>
			<b:GridCol size="MD_8">
				<t:XmlCode>
					<TextBox align="LEFT" placeholder="login" width="150px" maxLength="10"/>
					<Password align="LEFT" placeholder="password" width="150px" maxLength="8"/>
				</t:XmlCode>
			</b:GridCol>
		</b:GridRow>
		
		<b:GridRow>
			<b:GridCol size="MD_4" addStyleNames="exempleAlign">
				<b:TextBox text="login" width="150px" enabled="false" align="LEFT"/>
				<b:Password text="password" width="150px" enabled="false" align="RIGHT"/>
			</b:GridCol>
			<b:GridCol size="MD_8">
				<t:XmlCode>
					<TextBox text="login" width="150px" enabled="false" align="LEFT"/>
					<Password text="password" width="150px" enabled="false" align="RIGHT"/>
				</t:XmlCode>
			</b:GridCol>
		</b:GridRow>
		
		<b:GridRow>
			<b:GridCol size="MD_4" addStyleNames="exempleAlign">
				<b:InputGroup>
					<b:IconText text="@" />
					<b:TextBox placeholder="exemple@mail.com" />
				</b:InputGroup>
			</b:GridCol>
			<b:GridCol size="MD_8">
				<t:XmlCode>
					<InputGroup>
						<IconText text="@" />
						<TextBox placeholder="exemple@mail.com" />
					</InputGroup>
				</t:XmlCode>
			</b:GridCol>
		</b:GridRow>
		
		<b:GridRow>
			<b:GridCol size="MD_4" addStyleNames="exempleAlign">
				<b:InputGroup>
					<b:TextBox placeholder="Enter your text" />
					<b:Anchor icon="SEARCH" />
				</b:InputGroup>
			</b:GridCol>
			<b:GridCol size="MD_8">
				<t:XmlCode>
					<InputGroup>
						<TextBox placeholder="Enter your text" />
						<Anchor icon="SEARCH" />
					</InputGroup>
				</t:XmlCode>
			</b:GridCol>
		</b:GridRow>
		<b:GridRow>
			<b:GridCol size="MD_4" addStyleNames="exempleAlign">
				<b:InputGroup>
					<b:Anchor icon="CHEVRON_LEFT" />
					<b:TextBox text="0" />
					<b:Anchor icon="CHEVRON_RIGHT" />
				</b:InputGroup>
			</b:GridCol>
			<b:GridCol size="MD_8">
				<t:XmlCode>
					<InputGroup>
						<Anchor icon="CHEVRON_LEFT" />
						<TextBox text="0" />
						<Anchor icon="CHEVRON_RIGHT" />
					</InputGroup>
				</t:XmlCode>
			</b:GridCol>
		</b:GridRow>
	
	</b:Layout>
	
</ui:UiBinder> 